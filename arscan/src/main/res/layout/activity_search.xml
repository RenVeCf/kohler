<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kohler.arscan.SearchActivity">

    <include
        android:id="@+id/include_top_layout"
        layout="@layout/include_top_layout" />

    <include
        android:id="@+id/include_bottom_layout"
        layout="@layout/include_bottom_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/include_bottom_layout"
        android:layout_below="@id/include_top_layout"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="125dp"
                    android:layout_height="0.5dp"
                    android:background="#000000" />

                <View
                    android:layout_width="125dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="2dp"
                    android:background="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="探索总览"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="125dp"
                    android:layout_height="0.5dp"
                    android:background="#000000" />

                <View
                    android:layout_width="125dp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="2dp"
                    android:background="#000000" />
            </LinearLayout>

        </LinearLayout>

        <GridView
            android:id="@+id/gv_search"
            android:layout_marginTop="30dp"
            android:horizontalSpacing="25dp"
            android:verticalSpacing="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_title"
            android:gravity="center"
            android:numColumns="3" />
    </RelativeLayout>

</RelativeLayout>
