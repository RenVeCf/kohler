<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kohler.arscan.ShowActivity">

    <include
        android:id="@+id/include_top_layout"
        layout="@layout/include_top_layout" />

    <include
        android:id="@+id/include_bottom_layout"
        layout="@layout/include_bottom_layout" />

    <com.kohler.arscan.view.ColourImageBaseLayerView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/include_bottom_layout"
        android:layout_below="@id/include_top_layout"
        android:layout_centerInParent="true"
        android:background="@drawable/map_list" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/include_bottom_layout"
        android:layout_alignEnd="@id/map_view"
        android:layout_alignStart="@id/map_view"
        android:layout_below="@id/include_top_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="174.14dp"
            android:layout_marginTop="17.86dp"
            android:src="@drawable/a_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="289.86dp"
            android:layout_marginTop="74.86dp"
            android:src="@drawable/b_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="106.14dp"
            android:layout_marginTop="135.14dp"
            android:src="@drawable/c_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="264.57dp"
            android:layout_marginTop="155.14dp"
            android:src="@drawable/d_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91.14dp"
            android:layout_marginTop="223.43dp"
            android:src="@drawable/e_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43.14dp"
            android:layout_marginTop="256.86dp"
            android:src="@drawable/f_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280.57dp"
            android:layout_marginTop="265.14dp"
            android:src="@drawable/g_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="103.14dp"
            android:layout_marginTop="316.57dp"
            android:src="@drawable/h_icon" />

    </RelativeLayout>

</RelativeLayout>
