<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.whole_category.activity.CommodityClassificationActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_commodity_classification_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title_color="@color/black"/>

    <com.mengyang.kohler.whole_category.view.NavitationFollowScrollLayoutText

        android:id="@+id/nfsl_commodity_classification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y58"
        android:background="#ffffff"/>

    <android.support.design.widget.TabLayout
        android:visibility="gone"
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/y33"
        android:background="#e0e0e0"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_commodity_classification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
</LinearLayout>
