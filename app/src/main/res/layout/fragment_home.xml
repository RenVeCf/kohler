<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mengyang.kohler.home.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.mengyang.kohler.common.view.TopView
            android:id="@+id/tv_home_top"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="@dimen/y128"
            android:background="@color/white"
            app:is_back="true"
            app:is_customer_service="false"
            app:is_iv_top_title="false"
            app:is_menu="false"
            app:is_share="true"
            app:is_system_msg="false"
            app:title_color="@color/black"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/x60"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x60"
                    android:layout_marginBottom="@dimen/y186"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_home_search"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/y60"
                            android:layout_marginBottom="@dimen/y36"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/search"
                            android:singleLine="true"
                            android:textColor="#6e6e6e"/>

                        <ImageView
                            android:id="@+id/iv_home_search"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/y60"
                            android:src="@mipmap/search"/>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#2c2c2c"/>

                    <com.ryane.banner.AdPlayBanner
                        android:id="@+id/ab_home_loop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y1380"
                        android:layout_marginTop="@dimen/y36"/>

                    <LinearLayout
                        android:id="@+id/ll_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/y30"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y168"
                        android:text="@string/art_design"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brand_selection"
                        android:visibility="gone"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_home_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_my_brochure_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_brochure"
                    android:textColor="#252525"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/tv_my_brochure_donw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/books"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_books"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y600"
                    android:layout_marginTop="@dimen/y24"
                    android:layout_marginBottom="@dimen/y72"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
