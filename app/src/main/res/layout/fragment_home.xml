<com.mengyang.kohler.common.view.ResideLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mengyang.kohler.home.fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:layout_weight="0.1"
            android:gravity="bottom"
            android:text="科勒.KOHLER."
            android:textColor="@android:color/white"
            android:textSize="26sp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/MenuIconStyle"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        style="@style/MenuStyle"
                        android:text="@string/mine_manual"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/MenuIconStyle"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        style="@style/MenuStyle"
                        android:text="@string/toilet_seat"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/MenuIconStyle"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        style="@style/MenuStyle"
                        android:text="@string/shower_room_parts"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/MenuIconStyle"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        style="@style/MenuStyle"
                        android:text="@string/shower_room_nozzle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/MenuIconStyle"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        style="@style/MenuStyle"
                        android:text="@string/shower_nozzle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/MenuIconStyle"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        style="@style/MenuStyle"
                        android:text="@string/makeup"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/MenuIconStyle"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        style="@style/MenuStyle"
                        android:text="@string/massage_bathtub"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/MenuIconStyle"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        style="@style/MenuStyle"
                        android:text="@string/bathtub"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.mengyang.kohler.common.view.TopView
            android:id="@+id/tv_home_top"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="@dimen/y128"
            android:background="@color/white"
            app:is_back="true"
            app:is_customer_service="false"
            app:is_iv_top_title="false"
            app:is_menu="false"
            app:is_settings="true"
            app:is_system_msg="false"
            app:title_color="@color/black"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/x60"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/x60"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_home_search"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/y36"
                            android:background="@null"
                            android:hint="@string/search"
                            android:singleLine="true"
                            android:textColor="#6e6e6e"/>

                        <ImageView
                            android:id="@+id/iv_home_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/search"/>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#2c2c2c"/>

                    <com.ryane.banner.AdPlayBanner
                        android:id="@+id/ab_home_loop"
                        android:layout_width="match_parent"
                        android:layout_height="460dp"
                        android:layout_marginTop="@dimen/y36"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/y32"
                        android:orientation="horizontal"
                        android:paddingEnd="@dimen/x40">

                        <View
                            android:id="@+id/v_home_banner1"
                            android:layout_width="25dp"
                            android:layout_height="2dp"/>

                        <View
                            android:id="@+id/v_home_banner2"
                            android:layout_width="25dp"
                            android:layout_height="2dp"/>

                        <View
                            android:id="@+id/v_home_banner3"
                            android:layout_width="25dp"
                            android:layout_height="2dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y186"
                        android:text="@string/art_design"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/brand_selection"
                        android:visibility="gone"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_home_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y186"
                    android:text="@string/my_brochure"
                    android:textColor="#252525"
                    android:textSize="22sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/books"
                    android:textColor="#9e9e9e"
                    android:textSize="10sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_books"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/editor_selection"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/special_recommendation"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_all"/>

                        <View
                            android:layout_width="50dp"
                            android:layout_height="1dp"
                            android:background="#000000"/>
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_home_editor_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/where_to_buy"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/find_shop"/>

                <ImageView
                    android:id="@+id/iv_home_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_round"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.mengyang.kohler.common.view.ResideLayout>
