<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/azure_service_bg"
    android:orientation="vertical"
    tools:context=".common.activity.ReservationExperienceActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_reservation_experience_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="科勒预约体验活动"
        app:title_color="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/x46"
        android:layout_marginEnd="@dimen/x46"
        android:layout_marginBottom="@dimen/y60"
        android:background="@mipmap/appointment_experience_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x129"
            android:layout_marginTop="@dimen/y111"
            android:text="请问你想了解哪类产品？"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/appointment_experience_combined_shape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x120"
            android:layout_marginTop="@dimen/y35"
            android:layout_marginEnd="@dimen/x45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reservation_experience_product_big"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x30"
                android:layout_weight="1"
                android:background="@mipmap/trade_show_short_frame"
                android:drawableEnd="@mipmap/appointment_experience_triangle"
                android:gravity="center"
                android:paddingEnd="@dimen/x30"
                android:text="请选择"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reservation_experience_product_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x30"
                android:layout_weight="1"
                android:background="@mipmap/trade_show_short_frame"
                android:drawableEnd="@mipmap/appointment_experience_triangle"
                android:gravity="center"
                android:paddingEnd="@dimen/x30"
                android:text="请选择"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reservation_experience_product_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/trade_show_short_frame"
                android:drawableEnd="@mipmap/appointment_experience_triangle"
                android:gravity="center"
                android:paddingEnd="@dimen/x30"
                android:text="请选择"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x129"
            android:layout_marginTop="@dimen/y90"
            android:text="请问哪个店离你最近呢？"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/appointment_experience_combined_shape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x120"
            android:layout_marginTop="@dimen/y35"
            android:layout_marginEnd="@dimen/x45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reservation_experience_province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x30"
                android:layout_weight="1"
                android:background="@mipmap/trade_show_short_frame"
                android:drawableEnd="@mipmap/appointment_experience_triangle"
                android:gravity="center"
                android:paddingEnd="@dimen/x30"
                android:text="请选择"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reservation_experience_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x30"
                android:layout_weight="1"
                android:background="@mipmap/trade_show_short_frame"
                android:drawableEnd="@mipmap/appointment_experience_triangle"
                android:gravity="center"
                android:paddingEnd="@dimen/x30"
                android:text="请选择"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_reservation_experience_addr_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@mipmap/trade_show_short_frame"
                android:drawableEnd="@mipmap/appointment_experience_triangle"
                android:gravity="center"
                android:paddingEnd="@dimen/x30"
                android:text="请选择"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x129"
            android:layout_marginTop="@dimen/y90"
            android:text="请问您什么时候方便进店呢？"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/appointment_experience_combined_shape" />

        <TextView
            android:id="@+id/tv_reservation_experience_in_store_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x120"
            android:layout_marginTop="@dimen/y35"
            android:layout_marginEnd="@dimen/x45"
            android:background="@mipmap/trade_show_long_frame"
            android:drawableEnd="@mipmap/appointment_experience_triangle"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/x45"
            android:paddingEnd="@dimen/x30"
            android:text="请选择"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x129"
            android:layout_marginTop="@dimen/y90"
            android:text="请问您的手机号码？"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:src="@mipmap/appointment_experience_combined_shape" />

        <EditText
            android:id="@+id/et_reservation_experience_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x120"
            android:layout_marginTop="@dimen/y35"
            android:layout_marginEnd="@dimen/x45"
            android:background="@mipmap/trade_show_long_frame"
            android:focusable="false"
            android:hint="请选择"
            android:paddingStart="@dimen/x45"
            android:paddingEnd="@dimen/x30"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_reservation_experience_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y90"
            android:background="@mipmap/appointment_experience_button"
            android:text="立即预约"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>