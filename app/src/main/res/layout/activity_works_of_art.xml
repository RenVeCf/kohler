<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.home.activity.WorksOfArtActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_works_of_art_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="展品介绍"
        app:title_color="@color/black"/>

    <com.mengyang.kohler.common.view.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_works_of_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.mengyang.kohler.common.view.BounceScrollView>
</LinearLayout>
