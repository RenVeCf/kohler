<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.main.activity.DistributorVerificationCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y327"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x72"
                android:layout_marginTop="@dimen/y126"
                android:text="@string/verification_code_title"
                android:textColor="#252525"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x72"
                android:text="@string/verification_code"
                android:textColor="#9e9e9e"
                android:textSize="10sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_designer_verification_code_go_home"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/y48"
            android:layout_marginEnd="@dimen/x72"
            android:layout_marginTop="@dimen/y129"
            android:src="@mipmap/kohler_exit"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/x120"
        android:layout_marginStart="@dimen/x120"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y84"
            android:src="@mipmap/kohler_logo"/>

        <EditText
            android:id="@+id/et_designer_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y188"
            android:background="@null"
            android:hint="@string/input_deigner_code"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/y36"
            android:background="@color/black"/>

        <Button
            android:id="@+id/bt_designer_register_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y156"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y168"
            android:background="@color/black"
            android:text="@string/register"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
