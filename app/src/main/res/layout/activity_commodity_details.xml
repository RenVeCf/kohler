<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/chanpinbg"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.whole_category.activity.CommodityDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.mengyang.kohler.common.view.TopView
            android:id="@+id/tv_commodity_details_top"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:is_back="false"
            app:is_customer_service="true"
            app:is_iv_top_title="true"
            app:is_menu="true"
            app:is_settings="true"
            app:is_system_msg="true"
            app:title="@string/commodity_details"
            app:title_color="@color/white"/>

        <TextView
            android:id="@+id/tv_commodity_details_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/x72"
            android:textSize="18sp"
            android:textColor="#ffffff"
            tools:text="ESCALE® 艾思格尔"/>

        <TextView
            android:id="@+id/tv_commodity_details_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x72"
            android:textSize="18sp"
            android:textColor="#ffffff"
            tools:text="嵌入式泡泡浴缸（含浴枕）"/>

        <TextView
            android:id="@+id/tv_commodity_details_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x72"
            android:layout_marginTop="@dimen/y12"
            android:textColor="#ffffff"
            tools:text="K-11343T-GE-0"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y96"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_commodity_details_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/like"/>

        <Button
            android:id="@+id/bt_commodity_details_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="@string/go_pay"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
