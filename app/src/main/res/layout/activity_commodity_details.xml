<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/chanpinbg"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.whole_category.activity.CommodityDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.mengyang.kohler.common.view.TopView
            android:id="@+id/tv_commodity_details_top"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:is_back="false"
            app:is_customer_service="true"
            app:is_iv_top_title="true"
            app:is_menu="true"
            app:is_share="false"
            app:is_system_msg="true"
            app:title="@string/commodity_details"
            app:title_color="@color/white"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_commodity_details_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x72"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="ESCALE® 艾思格尔"/>

                <TextView
                    android:id="@+id/tv_commodity_details_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x72"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:text="嵌入式泡泡浴缸（含浴枕）"/>

                <TextView
                    android:id="@+id/tv_commodity_details_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x72"
                    android:layout_marginTop="@dimen/y12"
                    android:textColor="#ffffff"
                    android:text="K-11343T-GE-0"/>

                <com.zhouwei.mzbanner.MZBannerView
                    android:id="@+id/mzb_commodity_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y780"
                    android:layout_marginTop="@dimen/y96"
                    android:layout_marginStart="@dimen/x54"
                    android:layout_marginEnd="@dimen/x54"
                    android:layout_gravity="center_horizontal"
                    app:middle_page_cover="true"
                    app:open_mz_mode="true"
                    app:canLoop="true"
                    app:indicatorAlign="center"
                    app:indicatorPaddingLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x72"
                    android:layout_marginTop="@dimen/y156"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技术资料下载："
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y51"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/y60"
                            android:layout_weight="1"
                            android:text="@string/size_diagram"
                            android:textColor="#000000"
                            android:textSize="13sp"/>

                        <ImageView
                            android:id="@+id/iv_size_diagram_download"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/y60"
                            android:layout_marginEnd="@dimen/x75"
                            android:src="@mipmap/xiazaibai"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y51"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/y60"
                            android:layout_weight="1"
                            android:text="@string/installation_instructions"
                            android:textColor="#000000"
                            android:textSize="13sp"/>

                        <ImageView
                            android:id="@+id/iv_installation_instructions_download"
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/y60"
                            android:layout_marginEnd="@dimen/x75"
                            android:src="@mipmap/xiazaibai"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/y39"
                        android:background="#dddddd"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y300"
                        android:layout_marginTop="@dimen/y54"
                        android:src="@mipmap/ic_launcher_round"/>

                    <LinearLayout
                        android:id="@+id/ll_commodity_details_purchase_inquiries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="@dimen/x72"
                        android:layout_marginTop="@dimen/y63"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/x60"
                            android:layout_height="@dimen/y60"
                            android:src="@mipmap/detail_icon1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/purchase_inquiries"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/y36"
                        android:background="#dddddd"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_commodity_details_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="@string/like"/>

        <Button
            android:id="@+id/bt_commodity_details_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="@string/go_pay"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
