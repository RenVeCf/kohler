<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.home.activity.WeeklyRadioConcertActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_home_weekly_radio_concert"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="@string/weekly_radio_concert_cn"
        app:title_color="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e0e0e0"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_weekly_radio_concert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x60"
        android:layout_marginStart="@dimen/y60"
        android:layout_marginTop="@dimen/y60">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_weekly_radio_concert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
