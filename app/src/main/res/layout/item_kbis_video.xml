<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_kbis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_body_play"
        android:paddingTop="@dimen/y30"
        android:paddingBottom="@dimen/y45"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_kbis_play_down"
            android:layout_marginLeft="@dimen/x45"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_kbis_play_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123465"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_marginTop="@dimen/y15"
                android:text="123465"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/tv_kbis_play_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_kbis_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x27"
            android:src="@mipmap/kbis_play" />
    </RelativeLayout>
</FrameLayout>
