<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.home.activity.GanChuangActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_ganchuang_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="敢创•科勒亚太艺术展"
        app:title_color="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x60"
                android:layout_marginTop="@dimen/y84"
                android:text="现场视频"
                android:textColor="#252525"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x60"
                android:text="Video"
                android:textColor="#9e9e9e"
                android:textSize="10sp"/>

            <RelativeLayout
                android:id="@+id/rl_ganchuang_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginStart="@dimen/x60"
                android:layout_marginTop="@dimen/y39">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y684"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ganchuang_video"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y96"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/video"/>

                    <TextView
                        android:id="@+id/tv_ganchuang_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.3"
                        android:background="@color/black"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:paddingStart="@dimen/x30"
                        android:textColor="@color/white"
                        android:textSize="10sp"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginTop="@dimen/y171"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x60"
                        android:text="展品介绍"
                        android:textColor="#252525"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x60"
                        android:text="Works of Art"
                        android:textColor="#9e9e9e"
                        android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_go_works_of_art"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/y36"
                        android:text="View All"
                        android:textColor="#000000"
                        android:textSize="12sp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="2dp"
                        android:background="#d4d4d4"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_go_works_of_art"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y684"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginStart="@dimen/x60"
                android:layout_marginTop="@dimen/y39"
                android:scaleType="centerCrop"
                android:src="@mipmap/ganchuang_works_of_art"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginTop="@dimen/y171"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x60"
                        android:text="艺术家介绍"
                        android:textColor="#252525"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x60"
                        android:text="Artists"
                        android:textColor="#9e9e9e"
                        android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_go_artists"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/y36"
                        android:text="View All"
                        android:textColor="#000000"
                        android:textSize="12sp"/>

                    <View
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="2dp"
                        android:background="#d4d4d4"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ganchuang_artists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginStart="@dimen/x60"
                android:layout_marginTop="@dimen/y54"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x60"
                android:text="图片集锦"
                android:textColor="#252525"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x60"
                android:text="Gallery"
                android:textColor="#9e9e9e"
                android:textSize="10sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ganchuang_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginStart="@dimen/x60"
                android:layout_marginTop="@dimen/y48"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginStart="@dimen/x60"
                android:layout_marginTop="@dimen/y168"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/x10"
                    android:layout_weight="1"
                    android:background="@mipmap/meeting_bg2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x48"
                        android:layout_marginTop="@dimen/y48"
                        android:text="精彩预告"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y147"
                        android:layout_marginStart="@dimen/x48"
                        android:text="What's next"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ganchuang_position_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/x10"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/y33"
                    android:paddingStart="@dimen/x48"
                    android:paddingTop="@dimen/x48">

                    <TextView
                        android:id="@+id/tv_ganchuang_position_zero_agenda_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_ganchuang_position_zero_agenda_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_ganchuang_position_zero_agenda_position"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_ganchuang_position_zero_agenda_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_art_kohler_agenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y168"
                android:layout_marginEnd="@dimen/x60"
                android:layout_marginStart="@dimen/x60"
                android:layout_marginTop="@dimen/y24"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
