<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/y100">

    <ImageView
        android:id="@+id/iv_service_photo"
        android:layout_width="@dimen/x108"
        android:layout_height="@dimen/x108"
        android:layout_marginLeft="@dimen/x78"
        android:layout_marginTop="@dimen/y15"
        android:src="@mipmap/azure_service_photo_w" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x39"
        android:layout_toRightOf="@id/iv_service_photo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_serviec_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服小科"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x36"
                android:text="10:00"
                android:textColor="#989898" />

            <TextView
                android:id="@+id/tv_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:text="PM"
                android:textColor="#989898" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_service_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:paddingRight="@dimen/x20"
            android:text="您好，我是科勒机器人客服，请提问或输入关键词查询。"
            android:textColor="#ffffff" />

        <!--android:autoLink="all"
            android:textColorLink="#364ebd"-->
        <TextView
            android:id="@+id/tv_service_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#364ebd"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>