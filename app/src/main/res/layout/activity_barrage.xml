<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.home.activity.BarrageActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_barrage_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="@string/barrage"
        app:title_color="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y33"
        android:layout_marginStart="@dimen/x72"
        android:layout_marginEnd="@dimen/x72"
        android:paddingTop="@dimen/y39"
        android:paddingBottom="@dimen/y69"
        android:paddingStart="@dimen/x36"
        android:paddingEnd="@dimen/x36"
        android:background="@color/black"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="您好!您在这里输入的文字，会在大屏幕上显示哦！赶快来
输入吧！"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_barrage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y69"
        android:layout_marginStart="@dimen/x75"
        android:layout_marginEnd="@dimen/x75"/>


</LinearLayout>
