<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.home.activity.LiveRealTimeActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_live_real_time_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="@string/live_real_time"
        app:title_color="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_live_real_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/x72"
        android:layout_marginStart="@dimen/x72">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_live_real_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y360"
                android:layout_marginTop="@dimen/y36">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/vote_test"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x51"
                        android:layout_marginTop="@dimen/y120"
                        android:text="实时现场评论"
                        android:textColor="#ffffff"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x51"
                        android:layout_marginTop="2dp"
                        android:text="点击进入"
                        android:textColor="#ffffff"
                        android:textSize="10sp"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_live_real_time_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y70"
                android:text="@string/please_vote"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/voting_cannot_be_withdrawn"
                android:textColor="#b1b1b1"
                android:textSize="10sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_live_real_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y12"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
