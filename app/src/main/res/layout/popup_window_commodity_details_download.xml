<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_commodity_details_download_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y840"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/bt_commodity_details_download_preview"
        android:layout_width="@dimen/x552"
        android:layout_height="@dimen/y144"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y126"
        android:background="@color/black"
        android:text="@string/download_preview"
        android:textColor="@color/white"/>
</LinearLayout>
