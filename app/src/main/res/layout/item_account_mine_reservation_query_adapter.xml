<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y30"
        android:paddingEnd="@dimen/x48"
        android:paddingStart="@dimen/x48"
        android:paddingTop="@dimen/y30">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/time_of_appointment"
            android:textColor="#ffffff"
            android:textSize="11sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/store_address"
            android:textColor="#ffffff"
            android:textSize="11sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/reservation_code"
            android:textColor="#ffffff"
            android:textSize="11sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y165"
        android:gravity="center_vertical"
        android:background="@drawable/account_stroke_reservation_query_bt_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y45"
            android:layout_marginEnd="@dimen/x60"
            android:layout_marginStart="@dimen/x39"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reservation_query_time_of_appointment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="@dimen/x48"
                android:textColor="#000000"
                android:textSize="11sp"
                tools:text="2018.03.13"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#efefef"/>

            <TextView
                android:id="@+id/tv_reservation_query_store_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:layout_marginEnd="@dimen/x33"
                android:layout_marginStart="@dimen/x33"
                android:textColor="#000000"
                android:textSize="11sp"
                tools:text="上海市宜山路988号科勒XX店"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#efefef"/>

            <TextView
                android:id="@+id/tv_reservation_query_reservation_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="end"
                android:layout_marginStart="@dimen/x42"
                android:textColor="#000000"
                android:textSize="11sp"
                tools:text="KDS3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
