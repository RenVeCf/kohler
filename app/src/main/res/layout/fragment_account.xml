<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.account.fragment.AccountFragment">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_account_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:is_back="true"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="@string/mine_account"
        app:title_color="#000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_account_top"
        android:background="#c4c4c4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_account_settings"
            android:layout_width="@dimen/x72"
            android:layout_height="@dimen/y72"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:src="@mipmap/shezhi"/>

        <com.mengyang.kohler.common.view.CircleImageView
            android:id="@+id/civ_account_title"
            android:layout_width="@dimen/x243"
            android:layout_height="@dimen/y243"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y45"
            android:src="@mipmap/oval"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y51"
        android:layout_below="@+id/civ_account_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y27"
        android:textColor="@color/black"
        android:text="KOHLER"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y132"
        android:layout_marginBottom="@dimen/y82"
        android:layout_marginTop="@dimen/y72"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_account_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x141"
            android:layout_marginEnd="@dimen/x25"
            android:layout_weight="1"
            android:background="@drawable/account_stroke_lgoin_bt_bg"
            android:drawableStart="@mipmap/shouchan"
            android:paddingStart="@dimen/x61"
            android:paddingEnd="@dimen/x41"
            android:textColor="@color/black"
            android:text="@string/mine_like"/>

        <Button
            android:id="@+id/bt_account_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/x141"
            android:layout_marginStart="@dimen/x25"
            android:layout_weight="1"
            android:background="@drawable/account_stroke_lgoin_bt_bg"
            android:drawableStart="@mipmap/yuyue"
            android:paddingStart="@dimen/x71"
            android:paddingEnd="@dimen/x41"
            android:textColor="@color/black"
            android:text="@string/reservation_query"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c4c4c4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x78"
        android:layout_marginTop="@dimen/y63"
        android:text="@string/viewed"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x78"
        android:text="@string/your_browsing"
        android:textColor="#7c7c7c"
        android:textSize="10sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_account_browsing_no_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y261"
            android:layout_centerHorizontal="true"
            android:textColor="#797979"
            android:text="@string/browsing_no_login"
            android:visibility="gone"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_account_browsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x78"
            android:layout_marginTop="@dimen/y90">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_account_browsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</LinearLayout>
