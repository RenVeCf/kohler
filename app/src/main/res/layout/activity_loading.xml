<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.main.activity.LoadingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mengyang.kohler.main.view.LockableViewPager
            android:id="@+id/lvp_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/bt_loading_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:paddingStart="@dimen/x56"
            android:paddingEnd="@dimen/x56"
            android:layout_marginBottom="@dimen/y64"
            android:background="@color/black"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="@string/get_started"
            android:visibility="visible"/>
    </RelativeLayout>
</LinearLayout>
