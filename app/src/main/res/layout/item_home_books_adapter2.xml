<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x516"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x516"
        android:layout_height="@dimen/y650">

        <ImageView
            android:id="@+id/iv_brochure_list_adapter_download_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/queshengtu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_brochure_list_adapter_download_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/video"/>

            <TextView
                android:id="@+id/tv_brochure_list_adapter_download_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.8"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>