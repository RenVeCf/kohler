<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.home.activity.HomeSearchActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_home_search_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_settings="true"
        app:is_system_msg="true"
        app:title="@string/search_result"
        app:title_color="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x54"
        android:layout_marginStart="@dimen/x54"
        android:layout_marginTop="@dimen/y39"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_home_search_delete_search"
                android:layout_width="@dimen/x72"
                android:layout_height="@dimen/y72"
                android:layout_marginEnd="@dimen/x30"
                android:src="@mipmap/sousuoguanbi"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/y60"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/search"
                android:singleLine="true"/>

            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_marginEnd="@dimen/x75"
                android:src="@mipmap/sousuojieguo"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/y15"
            android:background="#000000"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_home_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y60"
        android:layout_marginEnd="@dimen/x72"
        android:layout_marginStart="@dimen/x72"/>
</LinearLayout>
