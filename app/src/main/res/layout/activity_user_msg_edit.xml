<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.account.activity.UserMsgEditActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_user_msg_edit_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="@string/user_msg_edit"
        app:title_color="#000000"/>

    <com.mengyang.kohler.common.view.CircleImageView
        android:id="@+id/civ_user_msg_edit_title"
        android:layout_width="@dimen/x243"
        android:layout_height="@dimen/y243"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y144"
        android:scaleType="centerCrop"
        android:src="@mipmap/oval"
        app:border_color="@color/black"
        app:border_width="2dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/y144"
        android:background="#c4c4c4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y204"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x72"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="@string/name"/>

        <EditText
            android:id="@+id/et_user_msg_edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/x72"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:background="@null"
            android:textColor="#757575"
            android:textSize="13sp"
            android:hint="@string/input_name"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>

    <Button
        android:id="@+id/bt_user_msg_edit_done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y156"
        android:layout_marginTop="@dimen/y180"
        android:layout_marginStart="@dimen/x120"
        android:layout_marginEnd="@dimen/x120"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="@string/done"/>
</LinearLayout>
