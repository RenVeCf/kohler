<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_azure_service_img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/x78"
    android:paddingRight="@dimen/x78"
    android:paddingBottom="@dimen/y100">

    <ImageView
        android:id="@+id/iv_service_photo"
        android:layout_width="@dimen/x108"
        android:layout_height="@dimen/x108"
        android:scaleType="centerCrop"
        android:src="@mipmap/azure_service_photo_w" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x39"
        android:layout_toRightOf="@id/iv_service_photo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_serviec_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服小科"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x36"
                android:text="10:00"
                android:textColor="#989898" />

            <TextView
                android:id="@+id/tv_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:text="PM"
                android:textColor="#989898" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_azure_service_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:orientation="vertical"
            android:paddingStart="@dimen/x36"
            android:paddingTop="@dimen/y33"
            android:paddingEnd="@dimen/x27">

            <TextView
                android:id="@+id/tv_service_product_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天天气真不错，给你推荐个产品。今天天气真不错，给你推荐个产品。"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y36"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/y48">

                <ImageView
                    android:id="@+id/iv_service_product_icon"
                    android:layout_width="@dimen/x225"
                    android:layout_height="@dimen/x225"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x30"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_service_product_recommend_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOURE® 萝瑞 单把碗盆龙头"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <!--<TextView-->
                        <!--android:id="@+id/tv_service_product_recommend_02"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/y12"-->
                        <!--android:text="K-14660T-4-CP"-->
                        <!--android:textColor="#ffffff"-->
                        <!--android:textSize="9sp" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/tv_service_product_recommend_03"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/y12"-->
                        <!--android:text="颜色/表面处理工艺：CP/抛光镀铬"-->
                        <!--android:textColor="#ffffff"-->
                        <!--android:textSize="9sp" />-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>