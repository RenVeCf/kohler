<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/quanpinleibg"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.whole_category.fragment.WholeCategoryFragment">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_whole_category_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:is_back="true"
        app:is_customer_service="false"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_settings="true"
        app:is_system_msg="false"
        app:title="@string/whole_category"
        app:title_color="@color/white"/>

    <ImageView
        android:layout_width="@dimen/x312"
        android:layout_height="@dimen/y117"
        android:layout_marginStart="@dimen/x96"
        android:src="@mipmap/select_logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x150"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:typeface="sans"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_whole_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y51"
        android:layout_marginTop="@dimen/y50"
        android:overScrollMode="never"
        app:layoutManager="@string/stacklayoutmanager"
        tools:listitem="@layout/item_whole_category_card"/>
</LinearLayout>