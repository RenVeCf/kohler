<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/quanpinleibg"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.whole_category.fragment.WholeCategoryFragment">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_whole_category_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:is_back="true"
        app:is_customer_service="false"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="false"
        app:title="@string/whole_category"
        app:title_color="@color/white"/>

    <!--android:layout_width="@dimen/x312"
        android:layout_height="@dimen/y117"-->
    <RelativeLayout
        android:layout_marginStart="@dimen/x140"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y117"
        >
        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/select_logo" />

        <TextView
            android:id="@+id/tv_title_en"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_whole_category_tabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x140"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y50">

        <TextView
            android:id="@+id/tv_whole_category_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_whole_category_gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:typeface="sans"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_whole_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y51"
        android:overScrollMode="never"
        app:layoutManager="@string/stacklayoutmanager"
        tools:listitem="@layout/item_whole_category_card"/>
</LinearLayout>