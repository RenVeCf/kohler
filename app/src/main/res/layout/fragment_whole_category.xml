<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/black"
              android:orientation="vertical"
              tools:context="com.mengyang.kohler.whole_category.fragment.WholeCategoryFragment">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_whole_category_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:is_back="true"
        app:is_customer_service="false"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_settings="true"
        app:is_system_msg="false"
        app:title="@string/whole_category"
        app:title_color="@color/white"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_whole_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layoutManager="@string/stacklayoutmanager"
        tools:listitem="@layout/item_whole_category_card" />

</LinearLayout>