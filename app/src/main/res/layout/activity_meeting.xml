<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.home.activity.MeetingActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_meeting_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="@string/dealers_meeting"
        app:title_color="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/x72"
            android:layout_marginStart="@dimen/x72"
            android:layout_marginTop="@dimen/y36"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_invitation_h5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/jinxiaodahui"/>

            <TextView
                android:id="@+id/tv_meeting_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/meeting_bg1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x48"
                        android:layout_marginTop="@dimen/y48"
                        android:text="@string/timed_remind"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x48"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:text="@string/reminder"/>

                    <LinearLayout
                        android:id="@+id/ll_meeting_msg_reminder_push"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y51"
                        android:layout_marginTop="@dimen/y57"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="@dimen/x48"
                            android:src="@mipmap/remind"/>

                        <TextView
                            android:id="@+id/tv_meeting_msg_reminder_push"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:textColor="#ffffff"
                            android:textSize="9sp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_meeting_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/x90"
                    android:paddingTop="@dimen/x48">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_agenda"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_next_agenda_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_next_agenda_position"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_next_agenda_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:textSize="16sp"
                android:textColor="#252525"
                android:text="搜索晚宴桌号"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:text="Search for your seat"/>

            <ImageView
                android:id="@+id/iv_meeting_search_table_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y360"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/meeting_table_number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:textSize="16sp"
                android:textColor="#252525"
                android:text="@string/live_real_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:text="Vote"/>

            <ImageView
                android:id="@+id/iv_meeting_vote"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y360"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/meeting_comment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="@string/barrage_talbe"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:text="Q&amp;A"/>

            <ImageView
                android:id="@+id/iv_meeting_chat_wall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y360"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/barrage_test"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:textSize="16sp"
                android:textColor="#252525"
                android:text="@string/wonderful_collection"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#9e9e9e"
                android:text="Photo Gallery"/>

            <ImageView
                android:id="@+id/iv_meeting_highlights"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y360"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/highlights_test"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/x10"
                    android:background="@mipmap/meeting_bg2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y48"
                        android:layout_marginStart="@dimen/x48"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="@string/conference_agenda"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x48"
                        android:layout_marginBottom="@dimen/y147"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="@string/agenda"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_meeting_position_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:paddingStart="@dimen/x48"
                    android:paddingTop="@dimen/x48"
                    android:paddingBottom="@dimen/y33">

                    <TextView
                        android:id="@+id/tv_meeting_position_zero_agenda_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_position_zero_agenda_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_position_zero_agenda_position"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_position_zero_agenda_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y168"
                android:layout_marginTop="@dimen/y24"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>