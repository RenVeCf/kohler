<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mengyang.kohler.home.activity.MeetingActivity">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_meeting_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="@string/dealers_meeting"
        app:title_color="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/x72"
            android:layout_marginStart="@dimen/x72"
            android:layout_marginTop="@dimen/y72"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invitation_english"
                android:textColor="#252525"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invitation"
                android:textColor="#9e9e9e"
                android:textSize="10sp"/>

            <RelativeLayout
                android:id="@+id/rl_invitation_h5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@mipmap/jinxiaodahui">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x60"
                    android:layout_marginTop="@dimen/y102"
                    android:text="@string/ndc"
                    android:textColor="#ffffff"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y102"
                    android:layout_marginStart="@dimen/x60"
                    android:layout_marginTop="@dimen/y208"
                    android:text="@string/kohler_china_meeting"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_meeting_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="敢经典，敢未来。2018年科勒中国经销商大会将在三
月于苏州正式拉开帷幕，届时科勒将向全国经销商伙
伴们展示逾百款融合了科技与设计的全新卫浴产品，
共同助力更多中国消费者的美好生活。"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/meeting_bg1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x48"
                        android:layout_marginTop="@dimen/y48"
                        android:text="@string/reminder"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x48"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        tools:text="@string/timed_remind"/>

                    <LinearLayout
                        android:id="@+id/ll_meeting_msg_reminder_push"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y51"
                        android:layout_marginTop="@dimen/y57"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="@dimen/x48"
                            android:src="@mipmap/remind"/>

                        <TextView
                            android:id="@+id/tv_meeting_msg_reminder_push"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:text="@string/msg_reminder_push_open"
                            android:textColor="#ffffff"
                            android:textSize="9sp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_meeting_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/x90"
                    android:paddingTop="@dimen/x48">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_agenda"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_next_agenda_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_next_agenda_position"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_next_agenda_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:text="@string/vote"
                android:textColor="#252525"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live_real_time"
                android:textColor="#9e9e9e"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/rl_meeting_vote"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y360"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/queshengtu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:text="Chat Wall"
                android:textColor="#252525"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要爬墙"
                android:textColor="#9e9e9e"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/rl_meeting_chat_wall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y360"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/queshengtu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:text="@string/live"
                android:textColor="#252525"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/wonderful_collection"
                android:textColor="#9e9e9e"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/iv_meeting_highlights"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y360"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/queshengtu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y108"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_meeting_position_zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f5f5f5"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/x10"
                    android:paddingStart="@dimen/x48"
                    android:paddingTop="@dimen/x48"
                    android:paddingBottom="@dimen/y33">

                    <TextView
                        android:id="@+id/tv_meeting_position_zero_agenda_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="11sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_position_zero_agenda_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/position_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_position_zero_agenda_position"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name_"
                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_meeting_position_zero_agenda_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/x10"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y48"
                        android:layout_marginStart="@dimen/x48"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="@string/agenda"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/x48"
                        android:layout_marginBottom="@dimen/y147"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="@string/conference_agenda"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_meeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y168"
                android:layout_marginTop="@dimen/y24"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>