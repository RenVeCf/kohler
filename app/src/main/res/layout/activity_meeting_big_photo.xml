<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mengyang.kohler.common.view.TopView
        android:id="@+id/tv_meeting_big_photo_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:is_back="false"
        app:is_customer_service="true"
        app:is_iv_top_title="true"
        app:is_menu="true"
        app:is_share="true"
        app:is_system_msg="true"
        app:title="@string/dealers_meeting"
        app:title_color="@color/black"/>

    <ImageView
        android:id="@+id/iv_meeting_big_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y190"
        android:scaleType="centerCrop"
        android:src="@mipmap/queshengtu"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x90"
        android:layout_marginTop="@dimen/y250"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/livevote_icon2"/>

        <TextView
            android:id="@+id/tv_meeting_big_photo_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x21"
            android:textColor="#ffffff"
            android:textSize="18sp"
            tools:text="120"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_meeting_big_photo_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="@dimen/x48"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrows_left"/>

    <ImageView
        android:id="@+id/iv_meeting_big_photo_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginEnd="@dimen/x48"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/arrows_right"/>

    <Button
        android:id="@+id/bt_meeting_big_photo_vote"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y99"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/y96"
        android:layout_marginEnd="@dimen/x96"
        android:background="@color/black"
        android:text="@string/vote_chinese"
        android:textSize="16sp"
        android:textColor="#ffffff"/>
</RelativeLayout>
