<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_account_modify_title_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y936"
        android:layout_marginBottom="@dimen/y108"
        android:layout_marginEnd="@dimen/x90"
        android:layout_marginStart="@dimen/x90"
        android:layout_marginTop="@dimen/y150"
        android:scaleType="fitXY"/>
    <Button
        android:id="@+id/bt_account_modify_title_img_confirm"
        android:layout_width="@dimen/x552"
        android:layout_height="@dimen/y144"
        android:layout_gravity="center_horizontal"
        android:background="@color/black"
        android:textColor="#ffffff"
        android:text="@string/confirm_the_replacement"/>
</LinearLayout>
