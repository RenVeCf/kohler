<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_kbis_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_body"
        android:paddingTop="@dimen/y30"
        android:paddingBottom="@dimen/y48"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_kbis_pdf_top"
            android:layout_marginLeft="@dimen/x33"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_kbis_pdf_title_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123465"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_kbis_pdf_des_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y15"
                android:text="123465"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_kbis_pdf_down"
            android:layout_marginLeft="@dimen/x33"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="123465"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/tv_kbis_pdf_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/y15"
                android:text="123465"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:id="@+id/tv_kbis_pdf_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_kbis_pef_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x27"
            android:src="@mipmap/kbis_download" />
    </RelativeLayout>
</FrameLayout>
